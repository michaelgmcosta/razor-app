@page
@model MyRazorApp.Pages.Index
@using System.Globalization;

<!DOCTYPE html>

<html>
    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Price</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Title</td>
                    <td>@category.Price.ToString("C", new CultureInfo("pt-BR"))</td>
                </tr>
            }
        </tbody>
    </table>
</html>